{
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "sourceMap": true,
    "lib": [
      "ES2022"
    ],
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "./src",
    "declaration": true,
    "outDir": "dist",
    "paths": {
      "@/*": [
        "*"
      ]
    },
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "jest.config.js",
    "dist/**/*",
    "knex",
  ]
}